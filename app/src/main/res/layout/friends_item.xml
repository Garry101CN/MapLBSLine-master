<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/search_client_result_relative"
    android:layout_marginTop="20dp"
    android:visibility="visible">

    <com.bignerdranch.android.imageloadingwan.CircleImageViewWan
        android:id="@+id/friends_item_avatar"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginLeft="30dp"
        android:scaleType="centerCrop"
        android:src="@drawable/avatar"
        app:BorderColor="@color/background_gray"
        app:BorderWith="3dp" />

    <TextView
        android:id="@+id/name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/friends_item_avatar"
        android:layout_toRightOf="@+id/friends_item_avatar"
        android:padding="10dp"
        android:text="昵称：" />

    <TextView
        android:id="@+id/friends_item_result_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@+id/name_text"
        android:gravity="center" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_text"
        android:layout_toRightOf="@id/friends_item_avatar"
        android:padding="10dp"
        android:text="注册号码：" />

    <TextView
        android:id="@+id/friends_item_result_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="170dp"
        />

    <TextView
        android:layout_width="330dp"
        android:layout_height="2dp"
        android:background="@color/background_gray"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="18dp"
        android:id="@+id/textView2" />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/friends_item_follow"
        android:background="@drawable/follow"
        android:layout_centerVertical="true"
        android:layout_marginLeft="320dp"/>
</RelativeLayout>

