<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/op_background"
    tools:context="com.bignerdranch.android.maplbsline.SignIn">

    <com.bignerdranch.android.imageloadingwan.CircleImageViewWan
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="140dp"
        android:src="@drawable/avatar"
        android:id="@+id/signup_circle_avatar"
        android:scaleType="centerCrop"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="手机号 ："
            android:textColor="@color/light_white"
            android:textSize="19sp"
             />
        <EditText
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:id="@+id/signup_phoneNumber"
            android:hint="       注册手机号码"
            android:textColorHint="@color/light_gray"
            android:textCursorDrawable="@drawable/cursor_color"
            android:cursorVisible="true"
            android:layout_marginLeft="0dp"
            app:theme="@style/MyEditText"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密    码 ："
            android:textSize="19sp"
            android:textColor="@color/light_white"
            />
        <EditText
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:id="@+id/signup_password"
            android:textColorHint="@color/light_gray"
            android:textCursorDrawable="@drawable/cursor_color"
            android:cursorVisible="true"
            android:hint="           输入密码"
            app:theme="@style/MyEditText"/>
    </LinearLayout>

    <Button
        android:layout_width="330dp"
        android:layout_height="45dp"
        android:id="@+id/signup_button_add_new_client"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="50dp"
        android:text="注                   册"
        android:background="#00000000"
        android:textColor="@color/light_white"
        android:textSize="22sp"/>

</LinearLayout>