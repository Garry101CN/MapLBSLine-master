<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/op_background2"
    tools:context="com.bignerdranch.android.maplbsline.SignIn">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/signup_image_back"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/back"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="60dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号 ："
            android:gravity="center_vertical"
            android:textColor="@color/light_white"
            android:textSize="19sp"
             />
        <EditText
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:id="@+id/signup_phoneNumber"
            android:hint="       注册手机号码"
            android:textColorHint="@color/light_gray"
            android:textCursorDrawable="@drawable/cursor_color"
            android:cursorVisible="true"
            android:layout_marginLeft="0dp"
            app:theme="@style/MyEditText"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="60dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密    码 ："
            android:gravity="center_vertical"
            android:textColor="@color/light_white"
            android:textSize="19sp" />

        <EditText
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:id="@+id/signup_password"
            android:textColorHint="@color/light_gray"
            android:textCursorDrawable="@drawable/cursor_color"
            android:cursorVisible="true"
            android:hint="           输入密码"
            app:theme="@style/MyEditText"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="60dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵    称 ："
            android:gravity="center_vertical"
            android:textColor="@color/light_white"
            android:textSize="19sp" />

        <EditText
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:id="@+id/signup_name"
            android:textColorHint="@color/light_gray"
            android:textCursorDrawable="@drawable/cursor_color"
            android:cursorVisible="true"
            android:hint="           输入昵称"
            app:theme="@style/MyEditText"/>

    </LinearLayout>


    <Button
        android:layout_width="260dp"
        android:layout_height="45dp"
        android:id="@+id/signup_button_add_new_client"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        android:text="注                   册"
        android:background="@drawable/toolbar_color"
        android:textColor="@color/light_white"
        android:textSize="22sp"/>

</LinearLayout>